<Window x:Class="Aplikacija.DodajanjeIgre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aplikacija"
        mc:Ignorable="d"
        Title="DodajanjeIgre" Height="300" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBox Name="ImeIgre" Grid.Row="0" Grid.Column="0" Background="Blue" Width="150" Height="30"/>

        <TextBox Name="PotIgre" Grid.Row="0" Grid.Column="1" Background="Blue" Width="150" Height="30"/>

        <Button Grid.Row="1" Grid.Column="1" Background="Gray" Width="150" Height="30"  Click="DodajIgro"/>


    </Grid>
</Window>
