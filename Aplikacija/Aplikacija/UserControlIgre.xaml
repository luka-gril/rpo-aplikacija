<UserControl x:Class="Aplikacija.UserControlIgre"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aplikacija"
             mc:Ignorable="d" 
             d:DesignWidth="300" Height="700">

    <!--d:DesignHeight="300"-->
    <Grid Background="#FF81807C">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Content="Iskanje" />
            <TextBox Name="iskanje" Height="20"  Margin="0,3" Width="247" Background="LightGray"/>
        </StackPanel>

        <ListView Grid.Row="1" Name="Igre" Background="#FF76746F" SelectionChanged="GameSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding Path=mIme}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</UserControl>
