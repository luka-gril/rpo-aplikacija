<UserControl x:Class="Aplikacija.UserControlUporabnik"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aplikacija"
             mc:Ignorable="d" 
             Height="700" d:DesignWidth="300">

    <UserControl.Resources>
        <Style TargetType="Label">
            <!--<Setter Property="Height" Value="40" />-->
            <!--<Setter Property="Margin" Value="25,5,25,0" />-->
            <Setter Property="Foreground" Value="White" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#FF81807C">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>


        
        <StackPanel >
            <Image Name="slikaUpo" Margin="20,30,20,5"  />
            <Label Name="ime_priimekUpo" FontSize="28" FontFamily="SimSun"   />
            <Label Name="vzdevekUpo" FontStyle="Italic" FontSize="20" />
        </StackPanel>


    </Grid>
</UserControl>
